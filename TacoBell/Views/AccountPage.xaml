<Window x:Class="TacoBell.Views.AccountPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TacoBell.Views"
        mc:Ignorable="d"
        Title="AccountPage" Height="600" Width="900"
        xmlns:helpers="clr-namespace:TacoBell.Helpers"
        WindowStartupLocation="CenterScreen"
        Background="#5C2D73">
    <Window.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <helpers:BoolToTextConverter x:Key="BoolToTextConverter"/>
        <helpers:SwitchModeTextConverter x:Key="SwitchModeTextConverter"/>

        <!-- Order Card Style -->
        <Style x:Key="OrderCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Section Button Style -->
        <Style x:Key="SectionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFE0B3"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFD700"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Top Black Bar -->
        <Grid Background="Black" Height="80" VerticalAlignment="Top" Panel.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side: User Icon + Login Text -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <Ellipse Width="40" Height="40" Fill="White" VerticalAlignment="Center"/>

                <!-- Show user's name when logged in -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                    Visibility="{Binding IsUserLoggedIn, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding CurrentUserName}" Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="5"/>
                    <Button Content="Logout"
                    Command="{Binding LogoutCommand}"
                    Background="Transparent" Foreground="White" BorderThickness="0" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Show login button when not logged in -->
                <Button Content="Login / Sign up"
                    Style="{StaticResource HoverTextButtonStyle}"
                    Command="{Binding NavigateToLoginCommand}"
                    VerticalAlignment="Center" Margin="10,0,0,0"
                    Visibility="{Binding IsUserLoggedIn, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Centered Logo -->
            <Image Grid.Column="1" Source="/Assets/Images/logo.png" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <!-- App Menu Icon Button -->
            <Button Grid.Column="2" Command="{Binding OpenAppMenuCommand}" Background="Transparent" BorderThickness="0" Cursor="Hand"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" Padding="0">
                <StackPanel Orientation="Vertical">
                    <Rectangle Height="4" Width="25" Fill="White" Margin="0,3"/>
                    <Rectangle Height="4" Width="25" Fill="White" Margin="0,3"/>
                    <Rectangle Height="4" Width="25" Fill="White" Margin="0,3"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- App Menu -->
        <Border Background="#CC2E0854" CornerRadius="0,0,12,12" Padding="5" Height="220" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,80,20,0"
                Visibility="{Binding IsAppMenuVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="2">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="40">
                <Button Content="HOME" Command="{Binding NavigateToHomeCommand}" Style="{StaticResource MenuButtonStyle}" Margin="8"/>
                <Button Content="MENU" Command="{Binding NavigateToMenuCommand}" Style="{StaticResource MenuButtonStyle}" Margin="8"/>
                <Button Content="ACCOUNT" Command="{Binding NavigateToAccountCommand}" Style="{StaticResource MenuButtonStyle}" Margin="8"/>
            </StackPanel>
        </Border>

        <!-- Scrollable Content (Main) -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,80,0,0" Panel.ZIndex="0">
            <StackPanel Margin="20">

                <!-- Page Title -->
                <TextBlock Text="CONTUL MEU" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- Section Navigation -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button Content="Informații Personale" Command="{Binding ShowPersonalInfoCommand}" Style="{StaticResource SectionButtonStyle}"/>
                    <Button Content="Comenzi Active" Command="{Binding ShowActiveOrdersCommand}" Style="{StaticResource SectionButtonStyle}"/>
                    <Button Content="Istoric Comenzi" Command="{Binding ShowOrderHistoryCommand}" Style="{StaticResource SectionButtonStyle}"/>
                </StackPanel>

                <!-- Personal Information Section -->
                <StackPanel Visibility="{Binding IsPersonalInfoVisible, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,10">
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Informații Personale" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" Foreground="#5C2D73"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- First Name -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Prenume:" VerticalAlignment="Center" Margin="0,5" FontWeight="SemiBold"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" Padding="8"/>

                                <!-- Last Name -->
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="Nume:" VerticalAlignment="Center" Margin="0,5" FontWeight="SemiBold"/>
                                <TextBox Grid.Row="0" Grid.Column="4" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" Padding="8"/>

                                <!-- Email (Read-only) -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" VerticalAlignment="Center" Margin="0,5" FontWeight="SemiBold"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Text="{Binding Email}" Margin="0,5" Padding="8" IsReadOnly="True" Background="#F5F5F5"/>

                                <!-- Phone -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Telefon:" VerticalAlignment="Center" Margin="0,5" FontWeight="SemiBold"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" Padding="8"/>

                                <!-- Address -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Adresă:" VerticalAlignment="Center" Margin="0,5" FontWeight="SemiBold"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" Text="{Binding DeliveryAddress, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" Padding="8"/>
                            </Grid>

                            <Button Content="Actualizează Informațiile" Command="{Binding UpdatePersonalInfoCommand}" 
                                    HorizontalAlignment="Center" Margin="0,15,0,0" Style="{StaticResource SectionButtonStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Active Orders Section -->
                <StackPanel Visibility="{Binding IsActiveOrdersVisible, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,10">
                    <TextBlock Text="Comenzi Active" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>

                    <ItemsControl ItemsSource="{Binding ActiveOrders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource OrderCardStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding OrderCode, StringFormat='Comanda #{0}'}" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding FormattedOrderDate}" FontSize="14" Foreground="Gray" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding StatusDisplay}" FontWeight="Bold" FontSize="14" Foreground="#5C2D73"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="10,0">
                                                <TextBlock Text="{Binding FormattedTotalCost}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding FormattedEstimatedDelivery, StringFormat='Livrare: {0}'}" FontSize="12" Foreground="Gray" HorizontalAlignment="Right"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Content="Detalii" Command="{Binding DataContext.ViewOrderDetailsCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                        CommandParameter="{Binding}" Style="{StaticResource SectionButtonStyle}" Margin="5,0"/>
                                                <Button Content="Anulează" Command="{Binding DataContext.CancelOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                        CommandParameter="{Binding}" Style="{StaticResource SectionButtonStyle}" 
                                                        Visibility="{Binding CanBeCancelled, Converter={StaticResource BoolToVisibilityConverter}}"
                                                        Background="#FF6B6B" Margin="5,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty state for active orders -->
                    <Border Background="White" CornerRadius="10" Padding="40" Margin="0,10" 
                            Visibility="{Binding ActiveOrders.Count, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <TextBlock Text="Nu aveți comenzi active în acest moment." FontSize="16" HorizontalAlignment="Center" Foreground="Gray"/>
                    </Border>
                </StackPanel>

                <!-- Order History Section -->
                <StackPanel Visibility="{Binding IsOrderHistoryVisible, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,10">
                    <TextBlock Text="Istoric Comenzi" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>

                    <ItemsControl ItemsSource="{Binding OrderHistory}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource OrderCardStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding OrderCode, StringFormat='Comanda #{0}'}" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding FormattedOrderDate}" FontSize="14" Foreground="Gray" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding StatusDisplay}" FontWeight="Bold" FontSize="14">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#5C2D73"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="livrata">
                                                                    <Setter Property="Foreground" Value="Green"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="anulata">
                                                                    <Setter Property="Foreground" Value="Red"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="10,0">
                                                <TextBlock Text="{Binding FormattedTotalCost}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right"/>
                                            </StackPanel>

                                            <Button Grid.Column="2" Content="Detalii" Command="{Binding DataContext.ViewOrderDetailsCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                    CommandParameter="{Binding}" Style="{StaticResource SectionButtonStyle}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty state for order history -->
                    <Border Background="White" CornerRadius="10" Padding="40" Margin="0,10" 
                            Visibility="{Binding OrderHistory.Count, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <TextBlock Text="Nu aveți comenzi în istoric." FontSize="16" HorizontalAlignment="Center" Foreground="Gray"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Order Details Modal -->
        <Border Background="#80000000" Visibility="{Binding IsOrderDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}" 
                Panel.ZIndex="10" MouseLeftButtonDown="CloseOrderDetails">
            <Border Background="White" CornerRadius="10" Width="500" Height="400" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#5C2D73" CornerRadius="10,10,0,0" Padding="15">
                        <Grid>
                            <TextBlock Text="{Binding SelectedOrder.OrderCode, StringFormat='Detalii Comanda #{0}'}" 
                                       FontWeight="Bold" FontSize="18" Foreground="White" VerticalAlignment="Center"/>
                            <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Center" 
                                    Background="Transparent" Foreground="White" BorderThickness="0" 
                                    FontSize="16" Click="CloseOrderDetails" Cursor="Hand"/>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" Margin="15">
                        <StackPanel>
                            <!-- Order Info -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="{Binding SelectedOrder.FormattedOrderDate, StringFormat='Data: {0}'}" FontSize="14" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedOrder.StatusDisplay, StringFormat='Status: {0}'}" FontSize="14" Margin="0,2" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedOrder.FormattedEstimatedDelivery, StringFormat='Ora estimată livrare: {0}'}" FontSize="14" Margin="0,2"/>
                            </StackPanel>

                            <!-- Order Items -->
                            <TextBlock Text="Produse comandate:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <ItemsControl ItemsSource="{Binding SelectedOrder.OrderItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding ItemName}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding FormattedQuantity}" VerticalAlignment="Center" Margin="10,0"/>
                                            <TextBlock Grid.Column="2" Text="{Binding FormattedTotalPrice}" VerticalAlignment="Center" FontWeight="Bold"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer with totals -->
                    <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="0,0,10,10" Padding="15">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Subtotal:" FontSize="14"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedOrder.FormattedSubtotal}" FontSize="14"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Transport:" FontSize="14"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedOrder.FormattedShippingFee}" FontSize="14"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Reducere:" FontSize="14"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedOrder.FormattedDiscount}" FontSize="14"/>

                                <Separator Grid.Row="3" Grid.ColumnSpan="2" Margin="0,5"/>
                            </Grid>

                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="TOTAL:" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedOrder.FormattedTotalCost}" FontWeight="Bold" FontSize="16"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Border>

    </Grid>
</Window>