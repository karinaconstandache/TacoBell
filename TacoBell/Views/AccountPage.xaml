<Window x:Class="TacoBell.Views.AccountPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TacoBell.Views"
        mc:Ignorable="d"
        Title="AccountPage" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#5C2D73">
    <Grid>
        <!-- Top Black Bar -->
        <Grid Background="Black" Height="80" VerticalAlignment="Top">
            <!-- Base columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side: User Icon + Login Text -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <Ellipse Width="40" Height="40" Fill="White" VerticalAlignment="Center"/>
                <TextBlock Text="Login / Sign up" Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Centered Logo -->
            <Image Grid.Column="1" Source="/Images/logo.png" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <!-- Menu Icon (Three lines) -->
            <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" Cursor="Hand">
                <Rectangle Height="4" Width="25" Fill="White" Margin="0,3"/>
                <Rectangle Height="4" Width="25" Fill="White" Margin="0,3"/>
                <Rectangle Height="4" Width="25" Fill="White" Margin="0,3"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
