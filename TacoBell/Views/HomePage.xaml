<Window x:Class="TacoBell.Views.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:TacoBell.Helpers"
        Title="HomePage" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>

        <!-- Top Black Bar -->
        <Grid Background="Black" Height="80" VerticalAlignment="Top" Panel.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side: User Icon + Login Text -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <Ellipse Width="40" Height="40" Fill="White" VerticalAlignment="Center"/>
                <Button Content="Login / Sign up"
                        Style="{StaticResource HoverTextButtonStyle}"
                        Command="{Binding NavigateToLoginCommand}"
                        VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Centered Logo -->
            <Image Grid.Column="1" Source="/Images/logo.png" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <!-- App Menu Icon Button -->
            <Button Grid.Column="2" Command="{Binding OpenAppMenuCommand}" Background="Transparent" BorderThickness="0" Cursor="Hand"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" Padding="0">
                <StackPanel Orientation="Vertical">
                    <Rectangle Height="4" Width="25" Fill="White" Margin="0,3"/>
                    <Rectangle Height="4" Width="25" Fill="White" Margin="0,3"/>
                    <Rectangle Height="4" Width="25" Fill="White" Margin="0,3"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- App Menu -->
        <Border Background="#2E0854" Height="180" HorizontalAlignment ="Right" VerticalAlignment="Top" Margin="0,80,0,0"
                Visibility="{Binding IsAppMenuVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="1">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="40">
                <Button Content="Home" Command="{Binding NavigateToHomeCommand}" Style="{StaticResource HoverTextButtonStyle}" Margin="7"/>
                <Button Content="Menu" Command="{Binding NavigateToMenuCommand}" Style="{StaticResource HoverTextButtonStyle}" Margin="7"/>
                <Button Content="Account" Command="{Binding NavigateToAccountCommand}" Style="{StaticResource HoverTextButtonStyle}" Margin="7"/>
            </StackPanel>
        </Border>


        <!-- Scrollable Content (Main) -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,80,0,0" Panel.ZIndex="0">
            <StackPanel Background="#5C2D73">

                <!-- Ad Section -->
                <Border Background="#3F1F50" Margin="0,20,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Button -->
                        <Button Grid.Column="0" Content="⟨" FontSize="24" Foreground="White"
                                Background="Transparent" BorderBrush="Transparent" Cursor="Hand"/>

                        <!-- Ad Image -->
                        <Border Grid.Column="1" MaxHeight="300" HorizontalAlignment="Stretch">
                            <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                                <Image Source="/Images/tacotuesday.png"
                                       Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"/>
                            </Viewbox>
                        </Border>

                        <!-- Right Button -->
                        <Button Grid.Column="2" Content="⟩" FontSize="24" Foreground="White"
                                Background="Transparent" BorderBrush="Transparent" Cursor="Hand"/>
                    </Grid>
                </Border>

                <!-- Responsive Cards -->
                <WrapPanel HorizontalAlignment="Center" Margin="20" ItemWidth="300" ItemHeight="Auto">
                    <!-- Card 1 -->
                    <Border Width="300" Background="#B2DFDB" Margin="10" CornerRadius="12">
                        <StackPanel>
                            <Image Source="/Images/menuimage.jpg" Height="180" Stretch="UniformToFill"/>
                            <TextBlock Text="MENIUL NOSTRU" FontWeight="Bold" FontSize="20"
                                       HorizontalAlignment="Center" Foreground="#4A148C" Margin="10"/>
                            <TextBlock TextWrapping="Wrap" FontSize="12" Margin="10"
                                       Text="Descoperă #tacogoodies cu inspirație mexicană, pregătite zilnic în restaurantele noastre."/>
                            <Button Content="VEZI MENIUL >>" HorizontalAlignment="Center"
                                    Margin="10" Background="Black" Foreground="White" Padding="5,2"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 2 -->
                    <Border Width="300" Background="#B2DFDB" Margin="10" CornerRadius="12">
                        <StackPanel>
                            <Image Source="/Images/locations.png" Height="180" Stretch="UniformToFill"/>
                            <TextBlock Text="RESTAURANTE" FontWeight="Bold" FontSize="20"
                                       HorizontalAlignment="Center" Foreground="#4A148C" Margin="10"/>
                            <TextBlock TextWrapping="Wrap" FontSize="12" Margin="10"
                                       Text="Găsește restaurantul Taco Bell cel mai apropiat și bucură-te de aromele noastre autentice."/>
                            <Button Content="VEZI LISTA >>" HorizontalAlignment="Center"
                                    Margin="10" Background="Black" Foreground="White" Padding="5,2"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
