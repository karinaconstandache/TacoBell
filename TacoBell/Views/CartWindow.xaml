<Window x:Class="TacoBell.Views.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coșul tău" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titlu -->
        <TextBlock Text="Coșul de cumpărături" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Listă produse + meniuri -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Produse -->
                <ItemsControl ItemsSource="{Binding Products}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding Name}" Width="200"/>
                                <TextBlock Text="{Binding Price, StringFormat='{}{0:0.##} lei'}" Width="100"/>
                                <Button Content="Șterge"
                                        Command="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}" Width="70"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Separator -->
                <Separator Margin="0,10"/>

                <!-- Meniuri -->
                <ItemsControl ItemsSource="{Binding Menus}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding Name}" Width="200"/>
                                <TextBlock Text="{Binding Price, StringFormat='{}{0:0.##} lei'}" Width="100"/>
                                <Button Content="Șterge"
                                        Command="{Binding DataContext.RemoveMenuCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}" Width="70"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Total + Plasează comanda -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="{Binding TotalText}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button Content="Plasează comanda" Width="150" Height="35" Command="{Binding PlaceOrderCommand}" />
        </StackPanel>
    </Grid>
</Window>
